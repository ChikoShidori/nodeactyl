{
	"name": "neodactyl",
	"version": "0.0.1",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		"import": "./dist/index.mjs",
		"require": "./dist/index.js"
	},
	"author": "ChikoShidori",
	"license": "MIT",
	"scripts": {
		"lint": "eslint src tests scripts --ext mjs,ts --fix",
		"format": "prettier --write --loglevel=warn \"{src,tests}/**/*.{js,ts,json}\"",
		"prepare": "husky install .github/husky",
		"changelog": "standard-version"
	},
	"devDependencies": {
		"@commitlint/cli": "^13.2.1",
		"@commitlint/config-conventional": "^13.2.0",
		"@sapphire/eslint-config": "^3.3.1",
		"@sapphire/prettier-config": "^1.2.1",
		"@sapphire/ts-config": "^3.1.0",
		"@typescript-eslint/eslint-plugin": "^4.33.0",
		"@typescript-eslint/parser": "^4.33.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "7.32.0",
		"husky": "^7.0.2",
		"lint-staged": "^11.2.2",
		"prettier": "^2.4.1",
		"pretty-quick": "^3.1.1",
		"standard-version": "^9.3.1",
		"ts-node": "^10.2.1",
		"typescript": "^4.4.3"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/chikoshidori/neodactyl.git"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"prettier": "@sapphire/prettier-config"
}
